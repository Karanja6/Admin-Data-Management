{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./Admin",                            // ðŸ‘ˆ baseUrl changed
    "paths": {
      "@/*": ["components/*"]                        // ðŸ‘ˆ matches Admin/components/*
    }
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
